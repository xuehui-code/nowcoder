import java.io.*;

public class Main{
    public static void main(String[] args)throws IOException{
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        String s = br.readLine();
        int n = Integer.parseInt(s);
        int result = 0;
        int x = 1;
        for(int i=1;i<=n;i++){
            x = 1;
            for(int j=1;j<=i;j++){
                x = x*j;
            }
            result = result+x;
        }
        System.out.println(result);
    }
}
